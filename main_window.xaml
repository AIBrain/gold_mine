<Window x:Class="GoldMine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ee="http://schemas.microsoft.com/expression/2010/effects"
        xmlns:local="clr-namespace:GoldMine"
        mc:Ignorable="d"
        Title="Gold Mine" Height="650" Width="1000" SizeChanged="onSizeChange" StateChanged="onStateChange"
        Closing="onWindowClosing">
    <DockPanel>
        <DockPanel Name="Menu" DockPanel.Dock="Top" LastChildFill="False" Background="LightGray">
            <Button Margin="2,2,2,6" Click="newGameClick">New Game</Button>
            <Button Margin="2,2,2,6">Statistics</Button>
            <Button Margin="2,2,2,6">About</Button>
            <TextBlock Name="TimePassed" Margin="2,2,2,6" DockPanel.Dock="Right">Time: 0s</TextBlock>
            <TextBlock Name="StockLeft" Margin="2,2,2,6" DockPanel.Dock="Right">In stock: x</TextBlock>
        </DockPanel>
        <Canvas Name="MainCanvas" DockPanel.Dock="Bottom"></Canvas>
    </DockPanel>
</Window>
